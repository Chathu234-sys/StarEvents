@model IEnumerable<Star_Events.Data.Entities.Event>
@{
    ViewData["Title"] = "Events";
}

<div class="container py-5" style="background-color:#0b0e14;min-height:100vh;">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold text-light mb-2"><i class="fas fa-calendar-alt me-2 text-primary"></i>Discover Amazing Events</h1>
            <p class="text-muted">Find and book tickets for the best events</p>
        </div>
    </div>

    <form asp-controller="Customer" asp-action="CustomerIndex" method="get">
        <div class="p-4 mb-5 shadow" style="background:#111827;border-radius:20px;">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label text-light"><i class="fas fa-tags me-1"></i>Category</label>
                    <select class="form-select" name="category">
                        <option value="">All Categories</option>
                        @foreach (var c in (IEnumerable<string>) (ViewBag.Categories ?? new List<string>()))
                        {
                            <option value="@c" selected="@(ViewBag.SelectedCategory==c)">@c</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label text-light"><i class="fas fa-location-dot me-1"></i>City</label>
                    <select class="form-select" name="city">
                        <option value="">All Cities</option>
                        @foreach (var c in (IEnumerable<string>) (ViewBag.Cities ?? new List<string>()))
                        {
                            <option value="@c" selected="@(ViewBag.SelectedCity==c)">@c</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-light"><i class="fas fa-calendar-day me-1"></i>Date</label>
                    <input class="form-control" type="date" name="date" value="@ViewBag.SelectedDate" />
                </div>
                <div class="col-md-1 d-grid">
                    <button class="btn btn-primary"><i class="fas fa-search me-1"></i>Search</button>
                </div>
            </div>
        </div>
    </form>

    <div class="row g-4">
        @foreach (var e in Model)
        {
            <div class="col-md-4">
                <!-- Decreased width from col-md-6 to col-md-4 -->
                <div class="card border-0 shadow overflow-hidden @(e.Date.Date < DateTime.Today ? "event-passed" : "")" style="background:#111827;color:#e5e7eb;">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(e.PosterUrl))
                        {
                            <img src="@e.PosterUrl" class="img-fluid w-100" style="max-height:220px;object-fit:cover;" alt="@e.Name" />
                        }
                        else
                        {
                            <div class="bg-gradient d-flex align-items-center justify-content-center" style="height:220px;background:linear-gradient(135deg,#3b82f6,#1d4ed8);">
                                <i class="fas fa-calendar-alt fa-3x text-white opacity-75"></i>
                            </div>
                        }
                        @{
                            var totalAvailable = e.TicketTypes?.Sum(tt => tt.TotalAvailable) ?? 0;
                            var isAvailable = totalAvailable > 0;
                            var isEventPassedLocal = e.Date.Date < DateTime.Today;
                            var availabilityClass = isEventPassedLocal ? "unavailable" : (isAvailable ? "available" : "sold-out");
                            var availabilityText = isEventPassedLocal ? "Unavailable" : (isAvailable ? "Available" : "Sold Out");
                        }
                        <span class="category-badge position-absolute top-0 start-0 m-3 px-3 py-1">@e.Category</span>
                        <span class="availability-badge @availabilityClass position-absolute top-0 end-0 m-3 px-3 py-1">@availabilityText</span>
                    </div>
                    <div class="card-body">
                        <h5 class="fw-bold mb-2 d-flex align-items-center flex-wrap gap-2">
                            <span class="event-title-badge px-3 py-1">@e.Name</span>
                        </h5>
                        <p class="text-muted small mb-3">@e.Description</p>
                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <div class="info-chip"><span class="me-2">üìÖ</span><strong>Date:</strong> @e.Date.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div class="col-6">
                                <div class="info-chip"><span class="me-2">‚è∞</span><strong>Time:</strong> @e.Time.ToString(@"hh\:mm")</div>
                            </div>
                            <div class="col-6">
                                <div class="info-chip"><span class="me-2">üìç</span><strong>Location:</strong> @e.Location</div>
                            </div>
                            <div class="col-6">
                                <div class="info-chip"><span class="me-2">üèüÔ∏è</span><strong>Venue:</strong> @(e.Venue?.Name ?? "‚Äî")</div>
                            </div>
                        </div>
                        <hr />
                        @{
                            var regular = e.TicketTypes?.FirstOrDefault(tt => string.Equals(tt.Name, "Seating", StringComparison.OrdinalIgnoreCase));
                            var price = regular?.Price ?? (e.TicketTypes?.Min(tt => tt.Price) ?? 0);
                        }
                        <div class="d-flex align-items-center mb-3">
                            <div class="text-success fw-bold h5 mb-0">Rs. @price.ToString("N0")</div>
                            <span class="small text-muted ms-2">Ticket Prices starting from</span>
                        </div>
                        <div class="d-grid gap-2">
                            <a class="btn btn-outline-light" asp-controller="Events" asp-action="Details" asp-route-id="@e.Id">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                            @if (e.Date.Date < DateTime.Today)
                            {
                                <button class="btn btn-secondary" disabled>
                                    <i class="fas fa-ban me-2"></i>Event Passed
                                </button>
                            }
                            else if (!isAvailable)
                            {
                                <button class="btn btn-secondary" disabled>
                                    <i class="fas fa-ticket-alt me-2"></i>Sold Out
                                </button>
                            }
                            else
                            {
                                <a class="btn btn-primary" asp-controller="Bookings" asp-action="Create" asp-route-eventId="@e.Id">
                                    <i class="fas fa-ticket-alt me-2"></i>Book Now
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

    <style>
        .category-badge {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            font-size: 0.95rem;
            border-radius: 999px;
            color: #fff;
            font-weight: 700;
        }
        .availability-badge {
            border-radius: 12px;
            font-size: 0.95rem;
            color: #fff;
            border-radius: 999px;
            font-weight: 700;
        }
        .availability-badge.available {
            background: linear-gradient(135deg, #10b981, #22c55e);
        }
        .availability-badge.unavailable {
            background: linear-gradient(135deg, #ef4444, #dc2626);
        }
        .availability-badge.sold-out {
            background: linear-gradient(135deg, #ef4444, #dc2626);
        }
        .event-passed {
            opacity: .75;
            filter: grayscale(15%);
        }
        .event-title-badge {
            background: linear-gradient(135deg, #ff7e5f, #feb47b);
            color: #fff;
            border-radius: 999px;
            font-size: 0.95rem;
            font-weight: 700;
        }
        .info-chip {
            background: rgba(255,255,255,0.06);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 12px;
            padding: 8px 10px;
            color: #cbd5e1;
            font-size: 0.9rem;
        }
        .card .row.text-muted > .col-4 { font-size: 0.9rem; }
        .card h5 { font-size: 1.1rem; }
        .card p.small { min-height: 40px; }
    </style>
</div>


