@model Star_Events.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3 card-dark">
                <div class="card-header text-white card-header-dark">
                    <h5 class="mb-0"><i class="bi bi-key me-2"></i>Change Password</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <input asp-for="CurrentPassword" class="form-control form-control-dark" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control form-control-dark" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-dark" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Change Password</button>
                            <a asp-action="PersonalInfo" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card-dark { background-color: #121212; color: #eaeaea; border: 1px solid #2a2a2a !important; }
    .card-header-dark { background: linear-gradient(90deg, #0f0f0f, #1b1b1b); border-bottom: 1px solid #2a2a2a !important; }
    .form-control-dark { background-color: #1e1e1e; color: #eaeaea; border-color: #30363d; }
    .form-control-dark:focus { background-color: #222; color: #fff; border-color: #0dcaf0; box-shadow: 0 0 0 .2rem rgba(13, 202, 240, .15); }
</style>


