@model IEnumerable<Star_Events.Data.Entities.Event>
@{
    ViewData["Title"] = "Events";
}

<div class="container py-5" style="background-color:#0b0e14;min-height:100vh;">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold text-light mb-2"><i class="fas fa-calendar-alt me-2 text-primary"></i>Discover Amazing Events</h1>
            <p class="text-muted">Find and book tickets for the best events</p>
        </div>
    </div>

    @* Search form removed on Home page as requested *@

    <div class="row g-4">
        @foreach (var e in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow" style="background:#111827;color:#e5e7eb;">
                    <div class="card-img-top" style="background:#0f1623;">
                        <div class="row g-0">
                            <div class="col-12">
                                @if (!string.IsNullOrEmpty(e.PosterUrl))
                                {
                                    <img src="@e.PosterUrl" class="img-fluid rounded-top" alt="@e.Name">
                                }
                                else
                                {
                                    <div class="bg-gradient rounded-top d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-calendar-alt fa-3x text-white opacity-75"></i>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="fw-bold mb-1">@e.Name</h5>
                        <div class="text-muted small mb-2">@e.Category • @e.Location</div>
                        <div class="mb-2">
                            <span class="badge bg-secondary">@e.Date.ToString("MMM dd, yyyy")</span>
                            <span class="badge bg-secondary">@e.Time</span>
                        </div>
                        <p class="text-muted">@e.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-between align-items-center">
                        <div class="text-success fw-bold">Rs. @e.TicketPrice.ToString("N0")</div>
                        <a class="btn btn-primary btn-sm" asp-controller="Bookings" asp-action="Create" asp-route-eventId="@e.Id">
                            <i class="fas fa-ticket-alt me-1"></i>Book
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
