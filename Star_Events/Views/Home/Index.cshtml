<!-- Upcoming Events Section -->
<section class="upcoming-events py-5 bg-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4">Welcome to Online Ticketing</h1>
            <p class="lead">Your premier destination for event tickets in Sri Lanka</p>
        </div>

        @if (ViewBag.UpcomingEvents != null && ((List<Star_Events.Data.Entities.Event>)ViewBag.UpcomingEvents).Any())
        {
            <div class="row g-4">
                @foreach (var eventItem in (List<Star_Events.Data.Entities.Event>)ViewBag.UpcomingEvents)
                {
                    var isEventPassed = eventItem.Date < DateTime.Today;
                    <div class="col-lg-4 col-md-6">
                        <div class="event-card h-100 position-relative overflow-hidden rounded-4 shadow-lg @(isEventPassed ? "event-passed" : "")">
                            <div class="event-image">
                                @if (!string.IsNullOrEmpty(eventItem.PosterUrl))
                                {
                                    <img src="@eventItem.PosterUrl" alt="@eventItem.Name" class="img-fluid">
                                }
                                else
                                {
                                    <div class="no-image d-flex align-items-center justify-content-center">
                                        <i class="bi bi-calendar-event display-4 text-white"></i>
                                    </div>
                                }
                                <div class="event-badge position-absolute top-0 start-0 m-3">
                                    <span class="badge category-badge rounded-pill">@eventItem.Category</span>
                                </div>
                                
                                @if (isEventPassed)
                                {
                                    <div class="availability-badge position-absolute top-0 end-0 m-3">
                                        <span class="badge unavailable-badge rounded-pill">Unavailable</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="availability-badge position-absolute top-0 end-0 m-3">
                                        <span class="badge available-badge rounded-pill">Available</span>
                                    </div>
                                }

                                <div class="event-overlay d-flex align-items-center justify-content-center">
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-light rounded-pill">
                                        <i class="bi bi-eye me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                            <div class="event-content p-4">
                                <h5 class="event-title mb-3">@eventItem.Name</h5>
                                <p class="event-description text-white-75">
                                    @if (!string.IsNullOrEmpty(eventItem.Description))
                                    {
                                        @(eventItem.Description.Length > 80 ? eventItem.Description.Substring(0, 80) + "..." : eventItem.Description)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description available</span>
                                    }
                                </p>
                                <!-- Date & Time -->
                                <div class="d-flex justify-content-between text-center mb-3 w-100">
                                    <div class="flex-fill">
                                        <div class="fw-bold text-white">
                                            @eventItem.Date.ToString("MMM dd, yyyy")
                                        </div>
                                        <small class="text-muted">📅 Date</small>
                                    </div>
                                    <div class="flex-fill">
                                        <div class="fw-bold text-white">
                                            @eventItem.Time.ToString(@"hh\:mm")
                                        </div>
                                        <small class="text-muted">⏰ Time</small>
                                    </div>
                                </div>

                                <div class="event-footer d-flex justify-content-between align-items-center">
                                    @* <div>
                                        <small class="text-muted">From</small>
                                        <strong class="text-success">Rs. @(eventItem.TicketTypes?.Min(tt => tt.Price) ?? 0).ToString("N0")</strong>
                                    </div> *@
                                    @if (isEventPassed)
                                    {
                                        <button class="btn btn-secondary d-block w-100 py-2 fw-semibold rounded" disabled>
                                            <i class="bi bi-x-circle me-2"></i> Event Passed
                                        </button>
                                    }
                                    else
                                    {
                                        <a asp-controller="Bookings"
                                           asp-action="Create"
                                           asp-route-eventId="@eventItem.Id"
                                           class="btn btn-success d-block w-100 py-2 fw-semibold rounded">
                                            <i class="bi bi-ticket-perforated me-2"></i> Book Now
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a class="btn btn-outline-light btn-lg rounded-pill" asp-controller="Events" asp-action="Index">
                    <i class="bi bi-calendar-event me-2"></i>View All Events
                </a>
            </div>
        }
        else
        {
            @if (ViewBag.UpcomingEvents != null && ((List<Star_Events.Data.Entities.Event>)ViewBag.UpcomingEvents).Any())
            {
                <div class="row g-4">
                    @foreach (var eventItem in (List<Star_Events.Data.Entities.Event>)ViewBag.UpcomingEvents)
                    {
                        <!-- your existing event card -->
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-1 text-muted"></i>
                    <h4 class="text-white mt-3">No Upcoming Events</h4>
                    <p class="text-white-75">Stay tuned for exciting new events!</p>
                    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                    {
                        <a asp-controller="Manager" asp-action="Create" class="btn btn-primary rounded-pill">
                            <i class="bi bi-plus-circle me-2"></i>Create Event
                        </a>
                    }
                </div>
            }
        }
    </div>
</section>

