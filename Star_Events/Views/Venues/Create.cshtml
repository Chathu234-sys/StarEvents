@model Star_Events.Data.Entities.Venue
@{
    ViewData["Title"] = "Create Venue";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-white display-6"><i class="bi bi-building me-2"></i> Create Venue</h2>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </div>

    <div class="card venue-card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-body p-4">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <!-- Venue Name -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Venue Name</label>
                    <input class="form-control bg-dark text-white border-0 form-control-lg" asp-for="Name" placeholder="e.g. Nelum Pokuna Theatre" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- City & Country -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">City</label>
                        <input class="form-control bg-dark text-white border-0" asp-for="City" placeholder="e.g. Colombo" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Country</label>
                        <input class="form-control bg-dark text-white border-0" asp-for="Country" placeholder="e.g. Sri Lanka" />
                    </div>
                </div>

                <!-- Address -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Address</label>
                    <input class="form-control bg-dark text-white border-0" asp-for="Address" placeholder="Street, area, nearby landmark" />
                </div>

                <!-- Capacity & Available Seats -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Capacity</label>
                        <input class="form-control bg-dark text-white border-0" asp-for="Capacity" type="number" placeholder="e.g. 1000" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Available Seats</label>
                        <input class="form-control bg-dark text-white border-0" asp-for="AvailableSeats" type="number" placeholder="e.g. 850" />
                    </div>
                </div>

                <!-- Save Button -->
                <div class="mt-4">
                    <button class="btn create-btn shadow-lg btn-lg w-100" type="submit">
                        <i class="bi bi-check-circle me-2"></i> Save Venue
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0d1117; /* Dark professional background */
        font-family: 'Segoe UI', sans-serif;
    }

    /* Card Styling */
    .venue-card {
        background: #1c1f26;
        color: #f8f9fa;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 20px;
    }

        .venue-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

    /* Input Fields */
    .form-control {
        border-radius: 12px;
        padding: 12px 15px;
        background-color: #1c1f26;
        color: #f8f9fa;
    }

        .form-control::placeholder {
            color: #b0b0b0;
        }

    .form-label {
        color: #f8f9fa;
        font-weight: 500;
    }

    /* Buttons */
    .create-btn {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        border: none;
        border-radius: 30px;
        color: #fff;
        font-weight: 600;
        padding: 12px 0;
        transition: 0.3s ease;
    }

        .create-btn:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #0072ff, #00c6ff);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

    .btn-outline-secondary {
        border-radius: 30px;
        color: #f8f9fa;
        border-color: #6c757d;
        transition: 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #343a40;
            transform: translateY(-2px);
        }
</style>
