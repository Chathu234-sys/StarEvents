@model Star_Events.Data.Entities.Venue
@{
    ViewData["Title"] = "Edit Venue";
}
<h2 class="text-white">Edit Venue</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">City</label>
            <input class="form-control" asp-for="City" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Country</label>
            <input class="form-control" asp-for="Country" />
        </div>
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Address</label>
        <input class="form-control" asp-for="Address" />
    </div>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Capacity</label>
            <input class="form-control" asp-for="Capacity" type="number" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Available Seats</label>
            <input class="form-control" asp-for="AvailableSeats" type="number" />
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </div>
</form>


