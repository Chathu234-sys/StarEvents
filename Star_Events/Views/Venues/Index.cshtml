@model IEnumerable<Star_Events.Data.Entities.Venue>
@{
    ViewData["Title"] = "Venues";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-white display-6"><i class="bi bi-building me-2"></i> Venues</h2>
        <a class="btn create-btn shadow-sm btn-lg" href="@Url.Action("Create")">
            <i class="bi bi-plus-circle me-2"></i> Create Venue
        </a>
    </div>

    <div class="row g-4">
        @foreach (var v in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card venue-card h-100 shadow-sm border-0 rounded-4 overflow-hidden position-relative">

                    <div class="card-body d-flex flex-column">
                        <!-- Venue Name -->
                        <h4 class="fw-bold mb-2 text-white">@v.Name</h4>

                        <!-- Venue Details -->
                        <p class="mb-2 text-nowrap venue-info">
                            <i class="bi bi-geo-alt-fill me-1"></i> @v.Address, @v.City<br />
                            <i class="bi bi-house-door-fill me-1"></i> @v.Country
                        </p>

                        <div class="mb-3">
                            <span class="badge info-badge">Capacity @v.Capacity</span>
                            <span class="badge info-badge">Available Seats @v.AvailableSeats</span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-auto d-flex flex-wrap gap-2">
                            <a class="btn btn-outline-primary btn-sm w-100" href="@Url.Action("Edit", new { id = v.Id })">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-outline-danger btn-sm w-100" href="@Url.Action("Delete", new { id = v.Id })">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted">
                <h5>No venues available.</h5>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #0d1117;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Venue Card Styling */
    .venue-card {
        background: #1c1f26;
        color: #f8f9fa;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
    }

        .venue-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.5);
        }

    /* Venue Info Text */
    .venue-info {
        font-size: 1rem;
        line-height: 1.5;
    }

    /* Badges */
    .info-badge {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        color: #fff;
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 12px;
        margin-right: 5px;
    }

    /* Buttons */
    .create-btn {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        border: none;
        border-radius: 30px;
        color: #fff;
        font-weight: 600;
        padding: 10px 22px;
        transition: 0.3s ease;
    }

        .create-btn:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #0072ff, #00c6ff);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

    .btn-outline-primary {
        border-color: #3b82f6;
        color: #3b82f6;
        border-radius: 20px;
        font-size: 0.9rem;
    }

        .btn-outline-primary:hover {
            background-color: #3b82f6;
            color: #fff;
        }

    .btn-outline-danger {
        border-color: #ef4444;
        color: #ef4444;
        border-radius: 20px;
        font-size: 0.9rem;
    }

        .btn-outline-danger:hover {
            background-color: #ef4444;
            color: #fff;
        }
</style>
