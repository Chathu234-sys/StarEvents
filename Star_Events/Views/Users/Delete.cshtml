@model Star_Events.Data.Entities.UserModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete User</h2>
<br />
<div class="alert alert-dismissible alert-warning">
    <h4 class="alert-heading">Are you sure you want to delete this user!</h4>
    <p class="mb-0">Are you sure you want to delete the user who is <span><b>@Model.FirstName</b></span> and the role of <span><b>@Model.Role</b></span> from the system!</p>
</div>
 <div>  
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;
        <a asp-controller="Users" asp-action="Index" class="btn btn-success">Cancel</a>
    </form>
</div>
