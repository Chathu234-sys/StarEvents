@model Star_Events.Data.Entities.TicketType
@{
    ViewData["Title"] = "Add Ticket Type";
}
<h2 class="text-white">Add Ticket Type</h2>
<form asp-action="AddTicketType" method="post">
    <input type="hidden" asp-for="EventId" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Price</label>
            <input class="form-control" asp-for="Price" type="number" step="0.01" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Total Available</label>
            <input class="form-control" asp-for="TotalAvailable" type="number" />
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-secondary" href="@Url.Action("TicketTypes", new { eventId = Model.EventId })">Cancel</a>
    </div>
</form>
