@model Star_Events.Models.ViewModels.EventCreateViewModel

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 bg-dark text-light p-4">
        <h2 class="fw-bold text-white mb-4">
            <i class="bi bi-calendar-plus text-success me-2"></i> Create New Event
        </h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- Event Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">
                    <i class="bi bi-type me-2 text-warning"></i> Event Name
                </label>
                <input asp-for="Name" class="form-control rounded-3 border-0 shadow-sm" placeholder="Enter event name" />
            </div>

            <!-- Date & Time -->
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Date" class="form-label fw-bold">
                        <i class="bi bi-calendar-event me-2 text-info"></i> Date
                    </label>
                    <input asp-for="Date" type="date" class="form-control rounded-3 border-0 shadow-sm" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Time" class="form-label fw-bold">
                        <i class="bi bi-alarm me-2 text-danger"></i> Time
                    </label>
                    <input asp-for="Time" type="time" class="form-control rounded-3 border-0 shadow-sm" />
                </div>
            </div>

            <!-- Category & Location -->
            <div class="row g-3 mt-3">
                <div class="col-md-6">
                    <label asp-for="Category" class="form-label fw-bold">
                        <i class="bi bi-tags me-2 text-primary"></i> Category
                    </label>
                    <input asp-for="Category" class="form-control rounded-3 border-0 shadow-sm" placeholder="e.g. Concert, Theatre" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Location" class="form-label fw-bold">
                        <i class="bi bi-geo-alt me-2 text-warning"></i> Location
                    </label>
                    <input asp-for="Location" class="form-control rounded-3 border-0 shadow-sm" placeholder="City / Area" />
                </div>
            </div>

            <!-- Venue -->
            <div class="mt-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-building me-2 text-success"></i> Venue
                </label>
                <select class="form-select rounded-3 border-0 shadow-sm" asp-for="VenueId" asp-items="Model.Venues">
                    <option value="">-- Select Venue --</option>
                </select>
            </div>

            <!-- Description -->
            <div class="mt-3">
                <label asp-for="Description" class="form-label fw-bold">
                    <i class="bi bi-journal-text me-2 text-info"></i> Description
                </label>
                <textarea asp-for="Description" rows="4" class="form-control rounded-3 border-0 shadow-sm" placeholder="Describe your event..."></textarea>
            </div>

            <!-- Ticket Types -->
            <fieldset class="border rounded-4 p-4 mt-4 bg-secondary bg-opacity-25">
                <legend class="float-none w-auto px-3 fw-bold text-light">
                    <i class="bi bi-ticket-detailed me-2 text-warning"></i> Ticket Types
                </legend>

                <div class="row g-3">
                    <!-- VIP -->
                    <div class="col-md-4">
                        <div class="card bg-dark text-light border-secondary shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title fw-bold text-warning">VIP</h6>
                                <label class="form-label">Price</label>
                                <input class="form-control" asp-for="VipPrice" type="number" step="0.01" />
                                <label class="form-label mt-2">Total</label>
                                <input class="form-control" asp-for="VipTotal" type="number" />
                            </div>
                        </div>
                    </div>

                    <!-- Seating -->
                    <div class="col-md-4">
                        <div class="card bg-dark text-light border-secondary shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title fw-bold text-info">Seating</h6>
                                <label class="form-label">Price</label>
                                <input class="form-control" asp-for="RegularPrice" type="number" step="0.01" />
                                <label class="form-label mt-2">Total</label>
                                <input class="form-control" asp-for="RegularTotal" type="number" />
                            </div>
                        </div>
                    </div>

                    <!-- Standing -->
                    <div class="col-md-4">
                        <div class="card bg-dark text-light border-secondary shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title fw-bold text-success">Standing</h6>
                                <label class="form-label">Price</label>
                                <input class="form-control" asp-for="ChildrenPrice" type="number" step="0.01" />
                                <label class="form-label mt-2">Total</label>
                                <input class="form-control" asp-for="ChildrenTotal" type="number" />
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Poster Upload -->
            <div class="mt-4">
                <label class="form-label fw-bold">
                    <i class="bi bi-image me-2 text-danger"></i> Event Poster
                </label>
                <input type="file" name="poster" class="form-control rounded-3 border-0 shadow-sm" accept="image/*" onchange="previewPoster(this)" />
                <div class="mt-3">
                    <img id="posterPreview" src="#" alt="Poster Preview" class="img-fluid rounded-3 shadow-sm d-none" />
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success btn-lg rounded-3 mt-4 shadow">
                <i class="bi bi-save me-2"></i> Save Event
            </button>
        </form>
    </div>
</div>

<!-- Poster Preview Script -->
<script>
    function previewPoster(input) {
        const output = document.getElementById('posterPreview');
        output.src = URL.createObjectURL(input.files[0]);
        output.classList.remove("d-none");
    }
</script>

<style>
    body {
        background-color: #0d1117;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-control,
    .form-select,
    textarea {
        background-color: #1c1f26; /* Dark box */
        color: #f8f9fa; /* Light text */
        border: 1px solid #2a2f3a; /* Subtle border */
    }

        .form-control::placeholder,
        textarea::placeholder {
            color: #adb5bd; /* lighter placeholder */
            opacity: 0.8;
        }

        .form-control:focus,
        .form-select:focus,
        textarea:focus {
            background-color: #1c1f26; /* keep dark */
            color: #fff; /* brighter text on focus */
            border-color: #00ff88; /* green glow */
            box-shadow: 0 0 8px rgba(0, 255, 136, 0.4);
        }

    textarea {
        resize: none;
    }
</style>
