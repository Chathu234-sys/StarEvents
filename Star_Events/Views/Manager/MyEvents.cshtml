@model IEnumerable<Star_Events.Data.Entities.Event>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-white display-6"> My Events</h2>
    <a asp-action="Create" class="btn create-btn shadow">
        <i class="bi bi-plus-circle me-2"></i> Create Event
    </a>
</div>

<div class="row g-4">
    @foreach (var ev in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card event-card h-100 shadow-sm border-0 rounded-4 overflow-hidden position-relative">

                @* <!-- Featured Ribbon -->
                @if (ev.IsFeatured)
                {
                    <div class="ribbon">Featured</div>
                } *@

                <!-- Event Image -->
                @if (!string.IsNullOrEmpty(ev.PosterUrl))
                {
                    <img src="@ev.PosterUrl" class="event-img" alt="@ev.Name Poster" />
                }
                else
                {
                    <div class="event-img bg-secondary text-white d-flex align-items-center justify-content-center">
                        <span class="fw-bold">No Poster</span>
                    </div>
                }

                <div class="card-body d-flex flex-column">

                    <!-- Category + Location -->
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge category-badge px-3 py-2">@ev.Category</span>
                        <small class="text-muted"><i class="bi bi-geo-alt"></i> @ev.Location</small>
                    </div>

                    <!-- Event Name -->
                    <h5 class="fw-bold mb-2">@ev.Name</h5>

                    <!-- Description -->
                    <p class="description-box">
                        @if (!string.IsNullOrEmpty(ev.Description))
                        {
                            @((ev.Description.Length > 100) ? ev.Description.Substring(0, 100) + "..." : ev.Description)
                        }
                        else
                        {
                            <span>No description available.</span>
                        }
                    </p>

                    <!-- Date & Time -->
                    <div class="d-flex justify-content-between text-center mb-3 w-100">
                        <div class="flex-fill">
                            <div class="fw-bold text-white">@ev.Date.ToString("MMM dd, yyyy")</div>
                            <small class="text-muted">📅 Date</small>
                        </div>
                        <div class="flex-fill">
                            <div class="fw-bold text-white">@ev.Time.ToString(@"hh\:mm") @DateTime.Today.Add(ev.Time).ToString("tt")</div>
                            <small class="text-muted">⏰ Time</small>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-auto d-flex flex-wrap gap-2">
                        <a asp-action="Details" asp-route-id="@ev.Id" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-outline-warning btn-sm w-100">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@ev.Id" class="btn btn-outline-danger btn-sm w-100">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a asp-action="TicketSales" asp-route-eventId="@ev.Id" class="btn btn-outline-success btn-sm w-100">
                            <i class="bi bi-graph-up"></i> Sales
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    body {
        background-color: #0d1117; /* Darker, professional background */
        font-family: 'Segoe UI', sans-serif;
    }

    /* Card Styling */
    .event-card {
        background: #1c1f26;
        color: #f8f9fa;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .event-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

    /* Event Image */
    .event-img {
        height: 220px;
        object-fit: cover;
        width: 100%;
    }

    /* Category Badge */
    .category-badge {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        font-size: 0.8rem;
        border-radius: 12px;
        color: #fff;
    }

    /* Ribbon for Featured Events */
    .ribbon {
        position: absolute;
        top: 12px;
        left: -30px;
        background: #ff3c38;
        color: #fff;
        text-transform: uppercase;
        padding: 5px 60px;
        font-size: 0.75rem;
        font-weight: 600;
        transform: rotate(-45deg);
        box-shadow: 0 2px 6px rgba(0,0,0,0.3);
    }


    /* Create Button */
    .create-btn {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        border: none;
        border-radius: 30px;
        padding: 10px 22px;
        color: #fff;
        font-weight: 600;
        transition: 0.3s ease;
    }

        .create-btn:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #0072ff, #00c6ff);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

    /* Action Buttons */
    .btn-outline-primary {
        border-color: #3b82f6;
        color: #3b82f6;
    }

        .btn-outline-primary:hover {
            background-color: #3b82f6;
            color: #fff;
        }

    .btn-outline-warning {
        border-color: #facc15;
        color: #facc15;
    }

        .btn-outline-warning:hover {
            background-color: #facc15;
            color: #000;
        }

    .btn-outline-danger {
        border-color: #ef4444;
        color: #ef4444;
    }

        .btn-outline-danger:hover {
            background-color: #ef4444;
            color: #fff;
        }

    .btn-outline-success {
        border-color: #22c55e;
        color: #22c55e;
    }

        .btn-outline-success:hover {
            background-color: #22c55e;
            color: #fff;
        }
</style>
