@model IEnumerable<Star_Events.Data.Entities.TicketType>
@{
    ViewData["Title"] = "Ticket Types";
}
<h2 class="text-white">Ticket Types</h2>
<p>
    <a class="btn btn-primary" href="@Url.Action("AddTicketType", new { eventId = (Guid)ViewBag.EventId })">Add Ticket Type</a>
    <a class="btn btn-outline-light" href="@Url.Action("MyEvents", "Manager")">Back to My Events</a>
 </p>
<table class="table table-dark table-striped align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Total Available</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Name</td>
            <td>@t.Price.ToString("C")</td>
            <td>@t.TotalAvailable</td>
        </tr>
    }
    </tbody>
</table>
