@model Star_Events.Data.Entities.Event

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 bg-dark text-light p-4">
        <h2 class="fw-bold text-white mb-4">
            <i class="bi bi-pencil-square text-warning me-2"></i> Edit Event
        </h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ManagerId" />
            
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Please correct the following errors:</strong>
            </div>
            
            <!-- Event Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">
                    <i class="bi bi-type me-2 text-warning"></i> Event Name <span class="text-danger">*</span>
                </label>
                <input asp-for="Name" class="form-control rounded-3 border-0 shadow-sm" placeholder="Enter event name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Date & Time -->
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Date" class="form-label fw-bold">
                        <i class="bi bi-calendar-event me-2 text-info"></i> Date <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Date" type="date" class="form-control rounded-3 border-0 shadow-sm" required />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Time" class="form-label fw-bold">
                        <i class="bi bi-alarm me-2 text-danger"></i> Time <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Time" type="time" class="form-control rounded-3 border-0 shadow-sm" required />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>

            <!-- Category & Location -->
            <div class="row g-3 mt-3">
                <div class="col-md-6">
                    <label asp-for="Category" class="form-label fw-bold">
                        <i class="bi bi-tags me-2 text-primary"></i> Category <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Category" class="form-control rounded-3 border-0 shadow-sm" placeholder="e.g. Concert, Theatre" required />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Location" class="form-label fw-bold">
                        <i class="bi bi-geo-alt me-2 text-warning"></i> Location <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Location" class="form-control rounded-3 border-0 shadow-sm" placeholder="City / Area" required />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>

            <!-- Venue -->
            <div class="mt-3">
                <label asp-for="VenueId" class="form-label fw-bold">
                    <i class="bi bi-building me-2 text-success"></i> Venue
                </label>
                <select asp-for="VenueId" class="form-select rounded-3 border-0 shadow-sm" asp-items="ViewBag.Venues">
                    <option value="">-- Select Venue --</option>
                </select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mt-3">
                <label asp-for="Description" class="form-label fw-bold">
                    <i class="bi bi-journal-text me-2 text-info"></i> Description
                </label>
                <textarea asp-for="Description" rows="4" class="form-control rounded-3 border-0 shadow-sm" placeholder="Describe your event..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Current Poster -->
            @if (!string.IsNullOrEmpty(Model.PosterUrl))
            {
                <div class="mt-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-image me-2 text-success"></i> Current Poster
                    </label>
                    <div class="mt-2">
                        <img src="@Model.PosterUrl" alt="Current Poster" class="img-fluid rounded-3 shadow-sm" style="max-width: 300px; max-height: 200px;" />
                    </div>
                </div>
            }

            <!-- Poster Upload -->
            <div class="mt-4">
                <label class="form-label fw-bold">
                    <i class="bi bi-image me-2 text-danger"></i> @(string.IsNullOrEmpty(Model.PosterUrl) ? "Event Poster" : "Change Poster")
                </label>
                <input type="file" name="poster" class="form-control rounded-3 border-0 shadow-sm" accept="image/*" onchange="previewPoster(this)" />
                <div class="mt-3">
                    <img id="posterPreview" src="#" alt="Poster Preview" class="img-fluid rounded-3 shadow-sm d-none" />
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-warning btn-lg rounded-3 shadow">
                    <i class="bi bi-save me-2"></i> Update Event
                </button>
                <a asp-action="MyEvents" class="btn btn-secondary btn-lg rounded-3 shadow">
                    <i class="bi bi-arrow-left me-2"></i> Back to Events
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Poster Preview Script -->
<script>
    function previewPoster(input) {
        const output = document.getElementById('posterPreview');
        if (input.files && input.files[0]) {
            output.src = URL.createObjectURL(input.files[0]);
            output.classList.remove("d-none");
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background-color: #0d1117;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-control,
    .form-select,
    textarea {
        background-color: #1c1f26; /* Dark box */
        color: #f8f9fa; /* Light text */
        border: 1px solid #2a2f3a; /* Subtle border */
    }

        .form-control::placeholder,
        textarea::placeholder {
            color: #adb5bd; /* lighter placeholder */
            opacity: 0.8;
        }

        .form-control:focus,
        .form-select:focus,
        textarea:focus {
            background-color: #1c1f26; /* keep dark */
            color: #fff; /* brighter text on focus */
            border-color: #00ff88; /* green glow */
            box-shadow: 0 0 8px rgba(0, 255, 136, 0.4);
        }

    textarea {
        resize: none;
    }
</style>