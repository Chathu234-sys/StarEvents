@model Star_Events.Data.Entities.Ticket
@{
    ViewData["Title"] = "QR Code - " + Model.DisplayTicketNumber;
}

<div class="container py-5" style="background-color:#0b0e14;min-height:100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow" style="background:#111827;color:#d1d5db;">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-qrcode fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold text-white">Your QR Code</h2>
                        <p class="text-muted">Present this at the event entrance</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.QRCodeImagePath))
                    {
                        <div class="card border-0 d-inline-block mb-4" style="background:#0f1623;">
                            <div class="card-body p-4">
                                <img src="@Model.QRCodeImagePath" alt="QR Code" class="img-fluid" style="max-width: 300px; max-height: 300px;" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            QR Code not available. Please contact support.
                        </div>
                    }

                    <div class="mb-4">
                        <h5 class="text-white">@Model.Event.Name</h5>
                        <p class="text-muted mb-2">@Model.TicketType.Name</p>
                        <p class="text-muted small">@Model.Event.Date.ToString("MMM dd, yyyy") at @Model.Event.Time</p>
                        <p class="text-muted small">@Model.Event.Venue.Name, @Model.Event.Venue.Address, @Model.Event.Venue.City</p>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Important:</strong> Keep this QR code safe. You'll need to show it at the event entrance.
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button onclick="window.print()" class="btn btn-success btn-lg">
                            <i class="fas fa-print me-2"></i>Print QR Code
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-eye me-2"></i>View Full Details
                        </a>
                        <a asp-action="MyTickets" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>All My Tickets
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        body * {
            visibility: hidden;
        }
        .card, .card * {
            visibility: visible;
        }
        .card {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .btn {
            display: none !important;
        }
    }
</style>
